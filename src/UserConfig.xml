        </environment>
    </environments>
    <mappers>
        <mapper resource="ArticlesMapper.xml"/>
        <mapper resource="CollectsMapper.xml"/>
        <mapper resource="Column_articleMapper.xml"/>
        <mapper resource="ColumnsMapper.xml"/>
        <mapper resource="CommentsMapper.xml"/>
        <mapper resource="FollowsMapper.xml"/>
